<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/song_eq_ib"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="45dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_eq_off"
        app:layout_constraintBottom_toTopOf="@+id/song_singer_name_tv"
        app:layout_constraintEnd_toStartOf="@+id/song_down_ib"
        app:layout_constraintStart_toEndOf="@+id/song_setting_ib"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/song_setting_ib"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="14dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_setting"
        app:layout_constraintBottom_toBottomOf="@+id/song_eq_ib"
        app:layout_constraintEnd_toStartOf="@+id/song_eq_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/song_eq_ib" />

    <ImageButton
        android:id="@+id/song_down_ib"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="23dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintBottom_toBottomOf="@+id/song_eq_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/song_eq_ib"
        app:layout_constraintTop_toTopOf="@+id/song_eq_ib" />

    <ImageButton
        android:id="@+id/song_more_ib"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintBottom_toTopOf="@+id/song_singer_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/song_music_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/song_down_ib" />

    <ImageView
        android:id="@+id/song_album_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="147dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintBottom_toBottomOf="@+id/song_like_iv_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_eq_ib" />

    <ImageView
        android:id="@+id/song_singer_more_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/btn_main_arrow_more"
        app:layout_constraintBottom_toBottomOf="@+id/song_singer_name_tv"
        app:layout_constraintEnd_toEndOf="@+id/song_album_iv"
        app:layout_constraintStart_toEndOf="@+id/song_music_title_tv"
        app:layout_constraintTop_toTopOf="@+id/song_singer_name_tv" />


    <TextView
        android:id="@+id/song_music_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="191dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="125dp"
        android:text="라일락"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/song_more_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_singer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="아이유 (IU)"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/song_singer_more_iv"
        app:layout_constraintTop_toBottomOf="@+id/song_music_title_tv" />


    <TextView
        android:id="@+id/song_music_lyrics_01_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라는 꽃가루에"
        android:textColor="@color/gray_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/song_music_lyrics_02_iv"
        app:layout_constraintEnd_toEndOf="@+id/song_music_lyrics_02_iv" />

    <TextView
        android:id="@+id/song_music_lyrics_02_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:text="눈이 따끔해 아야"
        android:textColor="@color/gray_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/song_like_iv_layout"
        app:layout_constraintStart_toStartOf="@+id/song_like_iv_layout" />

    <LinearLayout
        android:id="@+id/song_like_iv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/song_player_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/song_like_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_my_like_off" />

        <ImageView
            android:id="@+id/song_unlike_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/btn_player_unlike_off" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/song_progress_sb"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressBackgroundTint="@color/song_player_bg"
        android:thumb="@color/transparent"
        android:max="100000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_like_iv_layout"/>

    <TextView
        android:id="@+id/song_start_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:text="00:00"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/song_player_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/song_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="132dp"
        android:text="01:00"
        android:textColor="@color/gray_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/song_player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/song_start_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/song_end_time_tv">

        <ImageView
            android:id="@+id/song_repeat_iv"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_repeat_inactive"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="502dp" />

        <ImageView
            android:id="@+id/song_previous_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_previous"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="492dp" />

        <ImageView
            android:id="@+id/song_pause_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/song_miniplayer_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_play" />

        <ImageView
            android:id="@+id/song_next_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_next" />

        <ImageView
            android:id="@+id/song_random_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_random_inactive"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="502dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/song_instagram_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="112dp"
        android:src="@drawable/btn_actionbar_instagram"
        app:layout_constraintBottom_toBottomOf="@+id/song_related_iv"
        app:layout_constraintEnd_toStartOf="@+id/song_related_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/song_related_iv" />

    <ImageView
        android:id="@+id/song_related_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="111dp"
        android:src="@drawable/btn_player_related"
        app:layout_constraintBottom_toBottomOf="@+id/song_list_iv"
        app:layout_constraintEnd_toStartOf="@+id/song_list_iv"
        app:layout_constraintStart_toEndOf="@+id/song_instagram_iv"
        app:layout_constraintTop_toTopOf="@+id/song_list_iv" />

    <ImageView
        android:id="@+id/song_list_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/btn_player_go_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/song_related_iv"
        app:layout_constraintTop_toBottomOf="@+id/song_player_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>