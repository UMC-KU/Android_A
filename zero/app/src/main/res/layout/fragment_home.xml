<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--뭘 기준으로 wrap_content하는 걸까?-->

        <ImageView
            android:id="@+id/home__pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/home__pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home__pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home__pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home__pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home__pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home__pannel_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬 팝"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"

            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home__pannel_btn_play_iv"
            app:layout_constraintTop_toBottomOf="@+id/home__pannel_btn_nugu_iv"

            />

        <ImageView
            android:id="@+id/home__pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home__pannel_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/home__pannel_btn_nugu_iv"/>


        <TextView
            android:id="@+id/home__pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/home__pannel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:background="@drawable/round_corner"
            android:id="@+id/home__pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/home__pannel_album_img_02_iv"/>

        <TextView
            android:id="@+id/home__pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home__pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf= "@id/home__pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home__pannel_album_img_iv"/>

        <TextView
            android:id="@+id/home__pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_album_title_tv"
            app:layout_constraintStart_toEndOf= "@id/home__pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home__pannel_album_img_iv"/>

        <ImageView
            android:background="@drawable/round_corner"
            android:id="@+id/home__pannel_album_img_02_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home__pannel_background_iv"/>

        <TextView
            android:id="@+id/home__pannel_album_title_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 온당..."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"

            app:layout_constraintBottom_toTopOf="@id/home__pannel_album_singer_02_tv"
            app:layout_constraintStart_toEndOf= "@id/home__pannel_album_img_02_iv"
            app:layout_constraintTop_toTopOf="@id/home__pannel_album_img_02_iv"/>

        <TextView
            android:id="@+id/home__pannel_album_singer_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zero"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_album_title_02_tv"
            app:layout_constraintStart_toEndOf= "@id/home__pannel_album_img_02_iv"
            app:layout_constraintBottom_toBottomOf="@id/home__pannel_album_img_02_iv"/>


        <!--03/25-->
        <TextView
            android:id="@+id/home_today_music_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_background_iv"
            />

        <ImageView
            android:id="@+id/home_today_music_title_btn_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintBottom_toBottomOf="@id/home_today_music_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_today_music_title_tv"
            app:layout_constraintTop_toTopOf="@id/home_today_music_title_tv"

            />

        <TextView
            android:id="@+id/home_today_music_toatl_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="종합"
            android:textColor="#3F3FFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/home_today_music_domestic_tv"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_background_iv"
            />

        <TextView
            android:id="@+id/home_today_music_domestic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="국내"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/home_today_music_oversea_tv"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_background_iv"
            />

        <TextView
            android:id="@+id/home_today_music_oversea_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="해외"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home__pannel_background_iv"
            />

